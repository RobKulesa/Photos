<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="543.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.controllers.AlbumOpenController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Logout" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <GridPane layoutX="688.0" layoutY="6.0" prefHeight="507.0" prefWidth="134.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="buttonCreate" layoutX="18.0" layoutY="20.0" mnemonicParsing="false" onMouseClicked="#buttonCreateClicked" prefHeight="25.0" prefWidth="98.0" text="Add Photo" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="buttonDelete" layoutX="18.0" layoutY="20.0" mnemonicParsing="false" onMouseClicked="#buttonDeleteClicked" prefHeight="25.0" prefWidth="98.0" text="Delete Photo" textAlignment="CENTER" wrapText="true" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
                     <children>
                        <Button fx:id="buttonViewSlideshow" layoutX="21.0" layoutY="20.0" mnemonicParsing="false" onMouseClicked="#buttonViewSlideshowClicked" text="View Slideshow" />
                     </children></AnchorPane>
                  <AnchorPane prefHeight="63.0" prefWidth="107.0" GridPane.rowIndex="3" />
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="4" />
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="5">
                     <children>
                        <Button fx:id="buttonLogout" layoutX="19.0" layoutY="19.0" mnemonicParsing="false" onMouseClicked="#buttonLogoutClicked" prefHeight="25.0" prefWidth="98.0" text="Logout" />
                     </children></AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="6">
                     <children>
                        <Button fx:id="buttonBack" layoutX="18.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#buttonBackClicked" prefHeight="25.0" prefWidth="98.0" text="&lt; Back" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="7">
                     <children>
                        <Label layoutX="31.0" layoutY="6.0" text="Above button" />
                        <Label layoutX="35.0" layoutY="23.0" text="navigates to" />
                        <Label layoutX="28.0" layoutY="41.0" text="previous scene" />
                     </children>
                  </AnchorPane>
               </children>
            </GridPane>
            <ListView fx:id="listView" layoutX="325.0" layoutY="37.0" prefHeight="290.0" prefWidth="343.0" />
            <Label contentDisplay="CENTER" layoutX="467.0" layoutY="14.0" text="Picture List" />
            <Pane fx:id="paneConfirmCreate" layoutX="328.0" layoutY="348.0" prefHeight="140.0" prefWidth="343.0" visible="false">
               <children>
                  <Label fx:id="labelEntryField" layoutX="27.0" layoutY="14.0" text="New Photo Filepath:" />
                  <TextField fx:id="fieldNewEntry" layoutX="172.0" layoutY="10.0" />
                  <Button fx:id="buttonConfirm" layoutX="26.0" layoutY="58.0" mnemonicParsing="false" onMouseClicked="#buttonConfirmClicked" text="Confirm Changes" />
                  <Button fx:id="buttonCancel" layoutX="224.0" layoutY="58.0" mnemonicParsing="false" onMouseClicked="#buttonCancelClicked" prefHeight="25.0" prefWidth="100.0" text="Cancel Changes" />
                  <Label fx:id="labelInvalidAddition" layoutX="70.0" layoutY="100.0" text="Invalid Filepath given. Please try again." textFill="RED" visible="false" />
               </children>
            </Pane>
      </children>
    </AnchorPane>
  </children>
</VBox>
